{
  "name": "create-empty-package",
  "version": "1.0.0",
  "description": "Simple script to create a new, empty node package. Similar to `poetry new <name>`.",
  "author": "Andrew Meyer",
  "license": "MIT",
  "main": "bin/index.js",
  "bin": "bin/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rewdy/create-empty-package"
  },
  "homepage": "https://github.com/rewdy/create-empty-package#readme",
  "keywords": [
    "starter",
    "empty"
  ],
  "scripts": {
    "build": "node ./esbuild.config.js",
    "start": "node ./esbuild.config.js --watch",
    "format": "npx prettier --write 'src/**/*.{js,jsx,ts,tsx}'",
    "format:check": "npx prettier --check 'src/**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint src/.",
    "lint:fix": "eslint src/. --fix",
    "preflight": "run-p typecheck format:check lint",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.1.2",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/node": "^18.11.9",
    "@types/validate-npm-package-name": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "esbuild": "^0.15.15",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
